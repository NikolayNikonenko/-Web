@page "/about"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<h3>О программе</h3>

<p>
    Добро пожаловать на информационную страницу "О программе". 
    Вы можете скачать документ с полной информацией о программе, нажав на кнопку ниже.
</p>

<button class="btn btn-primary" @onclick="DownloadDocument">Скачать документ</button>

@code {
    private void DownloadDocument()
    {
        Navigation.NavigateTo("/api/document/about", true);
    }
}