    private async Task LoadData()
    {
        //using (var context = new ApplicationContext()) // Передайте нужные параметры
        //{
        try
        {
            // Загрузка данных о недостоверностях
            tm = await _context.tm.AsNoTracking().ToListAsync();
            filteredTm = tm;
